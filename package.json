{
  "name": "employeah",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd apps/api && bun run db:generate",
    "db:migrate": "cd apps/api && bun run db:migrate",
    "db:setup": "cd apps/api && bun run db:generate && bun run db:migrate",
    "api:dev": "cd apps/api && bun run dev",
    "web:dev": "cd apps/web && bun run dev"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
